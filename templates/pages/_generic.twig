{% extends "_layouts/site" %}

{% block content %}


    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-title">
                        <div class="row">
                            <div class="col-lg-9">
                                <h1>{{ entry.title }}</h1>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Content -->
    <section class="page">
    <div class="container">

        {#<div class="row ">#}


            {#<div class="col-lg-12 mb-3">#}
                {#<h1>{{ entry.title }}</h1>#}
            {#</div>#}
        {#</div>#}

        {% set lazyImage = false %}
        {% set blockPrefix = "" %}
        <div class="row ">
            <div class="h-100 col-xs-12 col-md-12 col-lg-7 col-xl-7">
                {% for block in entry.contentBlock.all() %}
                    {% include ('pages/_partials/_' ~ blockPrefix ~ 'block_' ~ block.type.handle) %}
                    {% if block.type.handle == "image" %}
                        {% set lazyImage = true %}
                    {% endif %}
                {% endfor %}


            </div>

        </div>

    </div>
    </section>


{% endblock content %}